<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="Theme.minhasfinancasTheme" parent="Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/Theme.minhasfinancasTheme.ActionBar</item>
        <item name="actionBarStyle">@style/Widget.minhasfinancasTheme.ActionBar</item>
    </style>

    <style name="Widget.minhasfinancasTheme.ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">#008000</item>
        <item name="background">#008000</item>
    </style>

    <style name="Theme.minhasfinancasTheme.ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">#008000</item>
        <item name="android:titleTextStyle">@style/Theme.minhasfinancasTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.minhasfinancasTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
    </style>

</resources>
